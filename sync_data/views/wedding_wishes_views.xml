<odoo>
    <data>

        <record id="wedding_wishes_view_search" model="ir.ui.view">
            <field name="name">wedding.wishes.search</field>
            <field name="model">wedding.wishes</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="invitation_code"/>
                    <field name="invitation_name"/>
                    <field name="invitation_description"/>
                </search>
            </field>
        </record>

        <record id="wedding_wishes_view_tree" model="ir.ui.view">
            <field name="name">wedding.wishes.tree</field>
            <field name="model">wedding.wishes</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="description"/>
                    <field name="invitation_code"/>
                    <field name="invitation_name"/>
                    <field name="invitation_description"/>
                </tree>
            </field>
        </record>

        <record id="wedding_wishes_view_form" model="ir.ui.view">
            <field name="name">wedding.wishes.form</field>
            <field name="model">wedding.wishes</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group col="4">
                            <field name="name"/>
                            <field name="description"/>
                            <field name="image" filename="image_filename"/>
                            <field name="image_filename" invisible="1"/>
                        </group>
                        <group>
                            <field name="wishes"/>
                        </group>
                        <group col="4" string="Invitation">
                            <field name="invitation_code"/>
                            <field name="invitation_name"/>
                            <field name="invitation_description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="wedding_wishes_action" model="ir.actions.act_window">
            <field name="name">Wedding Wishes</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wedding.wishes</field>
            <field name="view_mode">tree,form</field>
        </record>

        <!-- This Menu Item must have a parent and an action -->
        <menuitem id="wedding_wishes_menu" name="Wedding Wishes" parent="sync_data_sub" action="wedding_wishes_action" sequence="10"/>

    </data>
</odoo>