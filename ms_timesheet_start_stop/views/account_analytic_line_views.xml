<odoo>
    <data>

        <record id="hr_timesheet_line_tree" model="ir.ui.view">
            <field name="name">account.analytic.line.tree</field>
            <field name="model">account.analytic.line</field>
            <field name="inherit_id" ref="hr_timesheet.hr_timesheet_line_tree"/>
            <field name="arch" type="xml">
                <field name="unit_amount" position="before">
                    <field name="start_time"/>
                    <field name="break_time"/>
                    <field name="end_time"/>
                    <button name="button_break" type="object" string=" Break" class="fa fa-pause" attrs="{'invisible': ['|', '|', ('start_time', '=', False), ('end_time', '!=', False), ('break_time', '!=', False)]}"/>
                    <button name="button_resume" type="object" string=" Resume" class="fa fa-play" attrs="{'invisible': [('break_time', '=', False)]}"/>
                    <field name="break_unit_amount" widget="timesheet_uom" sum="Total"/>
                </field>
            </field>
        </record>

    </data>
</odoo>